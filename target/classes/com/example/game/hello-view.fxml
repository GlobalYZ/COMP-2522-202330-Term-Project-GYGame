<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/fxml" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.game.GameManager">
        <VBox alignment="CENTER" style="-fx-padding:30px;">
            <Text text="Hello, Welcome to EcoStack!" style="-fx-font-size: 20px;"/>
        </VBox>
        <children>
            <HBox alignment="CENTER" spacing="50.0" style="-fx-padding:30px;">
                <children>
                    <Button fx:id="newGameButton" onAction="#startNewGame" mnemonicParsing="false" prefHeight="50.0" prefWidth="100.0" text="NEW" />
                    <Button fx:id="loadGameButton" onAction="#loadOldGame" mnemonicParsing="false" prefHeight="50.0" prefWidth="100.0" text="LOAD"/>
                </children>
            </HBox>
        </children>
</VBox>
